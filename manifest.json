{
    "manifest_version": 3,
    "name": "Sci Hunter",
    "description": "Become an academic weapon with Sci Hunter!",
    "version": "1.0",
    "permissions": [
      "contextMenus", 
      "tabs",
      "clipboardWrite",
      "activeTab",
      "scripting",
      "commands"  
    ],
    "icons": {
      "16": "Assets/logo-16.png",
      "128": "Assets/logo-128.png"      
    },
    "background": {
      "service_worker": "main.js"
    },
    "commands": {
      "APACopy": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
        },
      "description": "Copy APA to the clipboard."
      }
    }
  }